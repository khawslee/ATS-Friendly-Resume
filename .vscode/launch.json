{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit Debug",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "console": "integratedTerminal",
            "args": [
                "run",
                "${file}",
                "--server.port=8501",
                "--logger.level=debug"
            ],
            "env": {
                "STREAMLIT_LOG_LEVEL": "debug"
            }
        }
    ]
}
